<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/Search_header"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <Spinner
            android:id="@+id/search_tenpo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.92"

            android:entries="@array/tenpos"
            android:spinnerMode="dialog">

        </Spinner>

        <Spinner
            android:id="@+id/search_shirizu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"

            android:entries="@array/shirizu"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:spinnerMode="dialog"
            android:layout_weight="1">

        </Spinner>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/insert_body1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_date"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="日付："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_date"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="date"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="0531"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/insert_body2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_JAN"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="JAN："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_JAN"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="number"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="2075"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/insert_body4"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_kakaku"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="価格："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_kakaku"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="2000"
            android:textAlignment="center" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/insert_body5"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_num"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="件数："
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/edit_num"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:ems="10"
            android:inputType="numberDecimal"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="2"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/insert_body6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/data_insert"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/holo_blue_dark"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:onClick="doClickOk"
            android:text="作成"
            android:textSize="20dp" />

        <Button
            android:id="@+id/data_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:background="@color/colorAccent"
            android:onClick="doClickCanccel"
            android:text="取消"
            android:textSize="20dp"

            />

    </LinearLayout>

</LinearLayout>

