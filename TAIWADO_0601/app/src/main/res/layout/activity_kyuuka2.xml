<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent">

    <LinearLayout
        android:id="@+id/Search_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal"

        android:weightSum="2">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="出勤予定"
            android:textSize="24dp"
            android:id="@+id/kyuuka_title"
            android:background="@drawable/edittext_bg"
            android:gravity="center_horizontal"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/kyuukai_body1"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_timeIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_bg"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="出勤時間"
            android:onClick="doClick"
            android:textAlignment="center"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/search_timeIn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.92"
            android:entries="@array/time"
            android:spinnerMode="dialog">

        </Spinner>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/kyuukai_body2"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_timeOut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_bg"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="退勤時間"
            android:onClick="doClick"
            android:textAlignment="center"
            android:textSize="18sp" />
        <Spinner
            android:id="@+id/search_timeOut"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.92"

            android:entries="@array/time"
            android:spinnerMode="dialog">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/kyuukai_body3"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:orientation="horizontal"

        android:weightSum="2">

        <TextView
            android:id="@+id/text_kyuuka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/edittext_bg"
            android:layout_weight="0.5"
            android:gravity="center"
            android:padding="1dp"
            android:paddingBottom="1dp"
            android:paddingEnd="1dp"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:paddingStart="1dp"
            android:paddingTop="1dp"
            android:text="休暇選択"
            android:onClick="doClick"
            android:textAlignment="center"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/search_kyuuka"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="1dp"
            android:layout_weight="0.92"

            android:entries="@array/kyuuka"
            android:spinnerMode="dialog">

        </Spinner>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/kyuukai_body4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal"
        android:weightSum="1">

        <Button
            android:id="@+id/kyuuka_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:background="@android:color/holo_blue_dark"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:onClick="doClickOk"
            android:text="保存"
            android:textSize="20dp" />

        <Button
            android:id="@+id/kyuuka_cancle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:layout_margin="1dp"
            android:padding="1dp"
            android:background="@color/colorAccent"
            android:onClick="doClickCanccel"
            android:text="取消"
            android:textSize="20dp"

            />

    </LinearLayout>

</LinearLayout>

