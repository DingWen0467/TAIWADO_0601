<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.taiwado.taiwado.HanbaiList"
    tools:showIn="@layout/activity_hanbai_list">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:layout_width="368dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <LinearLayout
            android:id="@+id/Search_header"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="15dp"
            android:orientation="horizontal"

            android:weightSum="2">

            <Spinner
                android:id="@+id/search_tenpo"
                android:layout_width="96dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="0.86"
                android:background="@android:color/holo_blue_light"
                android:entries="@array/tenpos"
                android:spinnerMode="dialog">

            </Spinner>

            <Spinner
                android:id="@+id/search_shirizu"
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:background="@color/colorAccent"
                android:entries="@array/shirizu"
                android:padding="1dp"
                android:paddingBottom="1dp"
                android:paddingEnd="1dp"
                android:paddingLeft="1dp"
                android:paddingRight="1dp"
                android:paddingStart="1dp"
                android:paddingTop="1dp"
                android:spinnerMode="dialog"
                android:layout_weight="0.94">

            </Spinner>



            <Button
                android:id="@+id/button_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="照会"
                android:onClick="doClickOk" />

        </LinearLayout>

        <TableLayout
            android:id="@+id/search_table_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/cardview_compat_inset_shadow"
            android:shrinkColumns="1">

            <TableRow>

                <TextView
                    android:id="@+id/table_4"
                    android:layout_column="1"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="日付"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/table_1"
                    android:layout_column="1"
                    android:layout_margin="1dp"
                    android:layout_weight="0.2"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="JAN"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/table_2"
                    android:layout_column="1"
                    android:layout_margin="1dp"
                    android:layout_weight="1"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="商品"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/table_3"
                    android:layout_column="1"
                    android:layout_margin="1dp"
                    android:layout_weight="0.3"
                    android:background="@android:color/holo_blue_dark"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="販売数"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </TableRow>

        </TableLayout>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:stretchColumns="2"
                android:id="@+id/hanbai_list"
                android:layout_alignParentBottom="true"
                android:layout_alignParentTop="true"

                >
                <TableRow>


                </TableRow>

            </TableLayout>

        </android.support.v4.widget.NestedScrollView>


    </LinearLayout>



</android.support.constraint.ConstraintLayout>
